<!DOCTYPE html>
<html>
  <head>
    <title>Gamester</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <nav class="navbar navbar-expand-sm bg-light">
    <%= link_to 'Gamester', root_path, class: 'navbar-brand' %>
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to new_game_path, class: 'nav-link' do %>
            <i class="fa fa-plus-square"></i>
            New Thread
          <% end %>
        </li>
      </ul>
      <br/>
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Sign In', new_user_session_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
          </li>
        <% end %>
        <div class="form-inline">
          <%= link_to 'Team Search', search_page_path, class: 'nav-link' %>
        </div>    
      </ul>
      <br/>
    </nav>
  
  <div class="slogan">Search and chat about your favorite college football team.</div> 

    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>

    <% if alert.present? %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
  
